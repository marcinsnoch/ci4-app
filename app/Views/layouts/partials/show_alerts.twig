{% set alert = session.getFlashdata('alert') %}
{% if alert %}
    <script>
        let alertContent = {
            autohide: true,
            body: '{{ alert.msg|raw }}',
            class: 'bg-{{ alert.type }}',
            icon: 'fa fa-info-circle',
            delay: 5000,
            title: '{{ alert.title|raw }}'
        };
        {% if alert.options %}
        Object.assign(alertContent, {{ alert.options|raw }});
        {% endif %}
        $(document).Toasts('create', alertContent);
    </script>
{% endif %}