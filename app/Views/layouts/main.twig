<!DOCTYPE html>
<html lang="en">

    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
            <title>{% block title %}Page Title{% endblock %} &ndash; {{ config.appName|default('App Name') }}</title>
            <link rel="shortcut icon" type="image/x-icon" href="{{ base_url('favicon.ico') }}">
            {% block styles %}{% endblock %}
            <link href="{{ base_url('plugins/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
            <link href="{{ base_url('plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ base_url('plugins/admin-lte/css/adminlte.min.css') }}" rel="stylesheet">
            <link href="{{ base_url('css/styles.min.css') }}" rel="stylesheet">
        {% endblock %}
    </head>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <nav class="main-header navbar navbar-expand navbar-light">
                {% include 'layouts/partials/navbar.twig' %}
            </nav>
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="{{ base_url('home') }}" class="brand-link">
                    <img src="{{ base_url('img/logo.svg') }}" alt="Logo" class="brand-image img-circle" style="opacity: .9">
                    <span class="brand-text font-weight-light">{{ myConfig.appName|default('App Name') }}</span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    {% include 'layouts/partials/sidebar.twig' %}
                </div>
            </aside>
            <div class="content-wrapper">{% block content %}{% endblock %}</div>
            <footer class="main-footer">
                <div class="float-right d-none d-sm-inline">
                    Created by <a href="mailto:marcin.msx@gmail.com">MSX TECH</a>
                </div>
                <strong>Copyright &copy; {{ "now"|date('Y') }} <a href="{{ config.item('app_url') }}">{{ myConfig.appName|default('App Name') }}</a>.</strong> All rights reserved.
            </footer>
        </div>
        <script src="{{ base_url('plugins/jquery/jquery.min.js') }}"></script>
        <script src="{{ base_url('plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ base_url('plugins/admin-lte/js/adminlte.min.js') }}"></script>
        {% block scripts %}{% endblock %}
        <script src="{{ base_url('js/application.min.js') }}"></script>
        {% include 'layouts/partials/show_alerts.twig' %}
    </body>

</html>
