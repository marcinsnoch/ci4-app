{% extends "layouts/auth.twig" %}

{% set title %}
    Forgot password
{% endset %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="w-100 m-auto">
    <div class="container">
        <div class="row">
            <div class="col-4 offset-4">
                <div class="text-center">
                    {{ myConfig.appName|default('n/a') }}
                </div>
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">Have you forgotten your password? You can get them here easily.</p>
                        {{ form_open() }}
                        <div class="input-group mb-3">
                            <input type="email" name="email" class="form-control {{ validation.hasError('email') ? 'is-invalid' }}" placeholder="Email">
                            <span class="input-group-text">
                                <span class="bi bi-envelope"></span>
                            </span>
                            {% if validation.hasError('email') %}
                                <span class="error invalid-feedback">{{ validation.getError('email') }}</span>
                            {% endif %}
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" name="send" class="btn btn-primary btn-block" value="true">Send</button>
                            </div>
                        </div>
                        {{ form_close() }}
                        <p class="mt-3 mb-1">
                            <a href="{{ base_url('/login') }}">Back to Login page</a>
                        </p>
                        {% if myConfig.register %}
                        <p class="mb-0">
                            <a href="{{ base_url('/register') }}" class="text-center">Register</a>
                        </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
