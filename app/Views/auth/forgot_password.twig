{% extends "layouts/auth.twig" %}

{% set title %}
    Forgot password
{% endset %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="login-box">
        <div class="login-logo">
            {{ config.item('app_name') }}
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Have you forgotten your password? You can get them here easily.</p>
                {{ form_open() }}
                <div class="input-group mb-3">
                    <input type="email" name="email" class="form-control {{ validation.hasError('email') ? 'is-invalid' }}" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    {% if validation.hasError('email') %}
                        <span class="error invalid-feedback">{{ validation.getError('email') }}</span>
                    {% endif %}
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" name="send" class="btn btn-primary btn-block" value="true">Send</button>
                    </div>
                </div>
                {{ form_close() }}
                <p class="mt-3 mb-1">
                    <a href="{{ base_url('/login') }}">Login</a>
                </p>
                <p class="mb-0">
                    <a href="{{ base_url('/register') }}" class="text-center">Register</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
